{
    "compilerOptions": {
      "outDir": "./public/",
      "noImplicitAny": false,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports":  true,
      "typeRoots": [
        "node_modules/@types",
        "special-types/"
      ], 
      "paths": {
        "@components/*": ["./components/*"],
        "@assets/*": ["./assets/*"],
        "@pages/*": ["./pages/*"],
        "@utils/*": ["./utils/*"],
        "@lib/*": ["./lib/*"]
      }
    }
  }
